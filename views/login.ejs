  <div class="center col-lg-5">
    <div class="card card-outline card-primary">
      <div class="card-header">
        <div class="header-logo text-center">
          <img src="/public/asset/Deped-Logo.png" alt="">
        </div>
      </div>
      <div class="card-body">
        <%- include('../views/partials/messages.ejs')%>
        <form action="/users/login" method="post">
        <div class="input-group mb-3">
          <input type="text" class="form-control" placeholder="Example@gmail.com" id="userEmail" name="userEmail" >
          <span class="input-group-text" id="basic-addon1"><i class="fas fa-user"></i></span>
        </div>
        <div class="input-group mb-3">
          <input type="password" class="form-control" placeholder="Password" id="userPass" name="userPass">
          <span class="input-group-text" id="basic-addon1"><i class="fas fa-lock"></i></span>
        </div>
        <div class="form-group mb-3">
          <div class="form-check">
            <input class="form-check-input" type="checkbox" id="seePassword" onchange="togglePasswordVisibility()" />
            <label class="form-check-label" for="selectAll">Show Password</label>
          </div>
        </div>
        <div class="">
