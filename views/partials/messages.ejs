<% if(locals.errors){ %> <% errors.forEach(function(error) { %>
<div class="alert alert-warning alert-dismissible fade show" role="alert">
  <%= error.msg %>
  <button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
  ></button>
</div>
<% }); %> <% } %>

<% if(success_msg2 != ''){ %>
<div class="alert alert-success alert-dismissible fade show" role="alert">
  <%- success_msg2 %>
  <button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
  ></button>
</div>
<% } %>
<script>
  document.addEventListener("DOMContentLoaded", function() {
      const successMsg = "<%- success_msg %>";
      const errorMsg = "<%- error_msg %>";
      if (successMsg) {
        Swal.fire({
          html: successMsg,
          title: "Success!",
          // text: successMsg,
          icon: "success"
        });
      }
      if (errorMsg) {
        Swal.fire({
          html: errorMsg,
          title: "Error!",
          // text: successMsg,
          icon: "error"
        });
      }
    });
</script>

<% if(error != ''){ %>
<div class="alert alert-danger alert-dismissible fade show" role="alert">
  <%= error %>
  <button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
  ></button>
</div>
<% } %>
